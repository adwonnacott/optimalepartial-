<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Collection_method_must_be_added</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL( Collection_Method__c , &#39;&#39;),
$Profile.Name &lt;&gt;&#39;System Administrator&#39;,
$Profile.Name &lt;&gt;&#39;Integration Admin&#39;)</errorConditionFormula>
    <errorDisplayField>Collection_Method__c</errorDisplayField>
    <errorMessage>Please enter a collection method</errorMessage>
</ValidationRule>
